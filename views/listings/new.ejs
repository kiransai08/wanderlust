<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
    <div class="col-8 offset-2" >
    <h3>Enter New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation">

     <div>
        <label for="title" class="form-label">Title</label>

    <input type="text" name="listing[title]" placeholder="Enter title" class="form-control"id = "title" REQUIRED>
    <div class="invalid-feedback">
        Please give a title.
      </div>
    </div>
    <br>
        
     <div>
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description"  title="description"  class="form-control" required></textarea>
        <div class="invalid-feedback">
            Please Short Note.
          </div>
    </div>
    <br>
        <div>
            <label for="price" class="form-label">Price</label>
        <input name="listing[price]" placeholder="Enter price"  id="price" class="form-control" required>
        <div class="invalid-feedback">
            Enter valid number
          </div>

    </div>
    <br>
        
    <div>
        <label for="url" class="form-label">URL</label>
        <input type="text" name="listing[image]" placeholder="Enter URL" id="url" class="form-control" >

    </div>
    <br>
    <div class="row">
    <div class="col-md-4">
        <label for="location" class="form-label" >Location</label>
        <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" id="location" required>
        <div class="invalid-feedback">
            Enter Correct Location.
          </div>

    </div>
    
        
    <div class="col-md-8">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" placeholder="Enter country" id="country" class="form-control" required>
        <div class="invalid-feedback">
            Please choose a username.
          </div>
    </div>
 </div>
    <br>

        <button  class ="btn btn-dark">Add</button>
    </form>
</div>
</div>
</body>

